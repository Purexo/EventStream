{
  "name": "eventstream",
  "version": "0.0.1",
  "description": "",
  "author": "Purexo",
  "license": "GNU GPL 3",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./Parser": "./dist/eventStreamParser.js",
    "./Reader": "./dist/eventStreamReader.js",
    "./BaseEventSource": "./dist/BaseEventSource.js",
    "./Node": "./dist/node/EventSource.js",
    "./Undici": "./dist/undici/EventSource.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Purexo/EventStream"
  },
  "scripts": {
    "start": "npm run build && node dist/test.js",
    "build": "tsc",
    "lint": "eslint .",
    "test": "npm run lint"
  },
  "peerDependencies": {
    "undici": "^5.12.0"
  },
  "peerDependenciesMeta": {
    "undici": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^2.7.1",
    "typedoc": "^0.23.21",
    "typescript": "^4.9.3",
    "undici": "^5.12.0"
  },
  "volta": {
    "node": "16.18.1",
    "npm": "8.19.3"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "extends": [
      "standard-with-typescript",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/array-type": [
        "error",
        {
          "default": "array",
          "readonly": "array"
        }
      ]
    },
    "ignorePatterns": [
      "dist/**"
    ]
  }
}
